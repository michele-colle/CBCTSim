{
    "version": 3,
    "configurePresets": [
        {
            "name": "cpu-debug",
            "displayName": "CPU (Debug)",
            "description": "Debug build of the standard Geant4 application.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/cpu-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "WITH_CELERITAS": "OFF"
            }
        },
        {
            "name": "gpu-debug",
            "displayName": "Celeritas GPU (Debug)",
            "description": "Debug build of the Celeritas-accelerated version.",
            "inherits": "cpu-debug",
            "binaryDir": "${sourceDir}/build/gpu-debug",
            "cacheVariables": {
                "WITH_CELERITAS": "ON"
            }
        },
        {
            "name": "cpu-release",
            "displayName": "CPU (Release)",
            "description": "Optimized release build of the standard Geant4 application.",
            "inherits": "cpu-debug",
            "binaryDir": "${sourceDir}/build/cpu-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "gpu-release",
            "displayName": "Celeritas GPU (Release)",
            "description": "Optimized release build of the Celeritas-accelerated version.",
            "inherits": "gpu-debug",
            "binaryDir": "${sourceDir}/build/gpu-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "cpu-profile",
            "displayName": "CPU (for Profiling)",
            "description": "Optimized release build with debug symbols.",
            "inherits": "cpu-debug",
            "binaryDir": "${sourceDir}/build/cpu-profile",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "intel-base",
            "displayName": "Intel oneAPI Base",
            "description": "Base settings for compiling with the Intel oneAPI toolchain.",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icpx",
                "CMAKE_PREFIX_PATH": "/home/colle/spack/var/spack/environments/g4-intel/.spack-env/view",
                "WITH_CELERITAS": "OFF"
            }
        },
        {
            "name": "intel-debug",
            "displayName": "Intel Build (Debug)",
            "inherits": "intel-base",
            "binaryDir": "${sourceDir}/build/intel-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "intel-release",
            "displayName": "Intel Build (Release)",
            "inherits": "intel-base",
            "binaryDir": "${sourceDir}/build/intel-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "cpu-profile",
            "configurePreset": "cpu-profile"
        },
        {
            "name": "cpu-debug",
            "configurePreset": "cpu-debug"
        },
        {
            "name": "gpu-debug",
            "configurePreset": "gpu-debug"
        },
        {
            "name": "cpu-release",
            "configurePreset": "cpu-release"
        },
        {
            "name": "gpu-release",
            "configurePreset": "gpu-release"
        },
        {
            "name": "intel-debug",
            "configurePreset": "intel-debug"
        },
        {
            "name": "intel-release",
            "configurePreset": "intel-release"
        },
        {
            "name": "CPUrelease",
            "description": "",
            "displayName": "",
            "inherits": [
                "cpu-release"
            ]
        },
        {
            "name": "gpu_release",
            "description": "",
            "displayName": "",
            "inherits": [
                "gpu-release"
            ]
        }
    ]
}